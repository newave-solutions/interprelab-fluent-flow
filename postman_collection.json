            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{SUPABASE_ANON_KEY}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"The patient presents with acute abdominal pain. Blood pressure is 140/90. Administer 500mg of medication.\",\n  \"medications\": [\"medication\"],\n  \"conversions\": [\n    {\n      \"value\": 500,\n      \"unit\": \"mg\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/functions/v1/process-interprecoach",
              "host": ["{{BASE_URL}}"],
              "path": ["functions", "v1", "process-interprecoach"]
            }
          },
          "response": []
        },
        {
          "name": "Generate Interpreter Feedback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{SUPABASE_ANON_KEY}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionData\": {\n    \"duration\": 1800,\n    \"interactionCount\": 25,\n    \"terminologyCount\": 15,\n    \"clarifications\": 3,\n    \"paceIssues\": 2,\n    \"omissions\": 1\n  }\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/functions/v1/generate-interpreter-feedback",
              "host": ["{{BASE_URL}}"],
              "path": ["functions", "v1", "generate-interpreter-feedback"]
            }
          },
          "response": []
        },
        {
          "name": "Generate Flashcards",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{SUPABASE_ANON_KEY}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardType\": \"term-translation\",\n  \"specialty\": \"cardiology\",\n  \"count\": 10\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/functions/v1/generate-flashcards",
              "host": ["{{BASE_URL}}"],
              "path": ["functions", "v1", "generate-flashcards"]
            }
          },
          "response": []
        },
        {
          "name": "Debriefing Questionnaire",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{SUPABASE_ANON_KEY}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"responses\": \"Today's session was emotionally challenging. I interpreted for a terminal cancer diagnosis. I felt the patient's pain deeply and found it difficult to maintain professional distance. I'm concerned about carrying this emotional weight.\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/functions/v1/debriefing-questionnaire",
              "host": ["{{BASE_URL}}"],
              "path": ["functions", "v1", "debriefing-questionnaire"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
