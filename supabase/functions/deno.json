{
    "tasks": {
        "dev": "deno run --watch main.ts"
    },
    "imports": {
        "std/": "https://deno.land/std@0.168.0/",
        "supabase": "https://esm.sh/@supabase/supabase-js@2"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "deno.unstable"
        ],
        "strict": true,
        "allowJs": true
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ],
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve"
    }
}