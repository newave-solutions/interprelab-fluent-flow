{
  "manifest_version": 3,
  "name": "InterpreCoach - HIPAA Compliant Medical Interpretation Assistant",
  "version": "1.0.0",
  "description": "Real-time medical interpretation assistance with HIPAA-compliant PHI protection and de-identification",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["overlay-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
